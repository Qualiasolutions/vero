ENABLE_EXPERIMENTAL_COREPACK=1

# App URL (Required for Stripe redirects and absolute URLs)
NEXT_PUBLIC_URL=http://localhost:3000

# Stripe Configuration (Required)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
STRIPE_CURRENCY=aed
ENABLE_STRIPE_TAX=

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
DATABASE_URL=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres

# Docker
DOCKER=

# Internationalization
NEXT_PUBLIC_LANGUAGE=en-US

# Analytics (Optional)
NEXT_PUBLIC_UMAMI_WEBSITE_ID=

# Email Configuration (Optional - for order confirmations)
RESEND_API_KEY=

# Error Monitoring (Optional - for production)
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=

# Development (Optional - for testing auth)
EMAIL=
PASSWORD=
