# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Site Configuration (REQUIRED)
NEXT_PUBLIC_URL=https://veromodels.com
SECRET=your-secure-random-secret-key-min-32-chars

# Stripe Configuration (REQUIRED)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_CURRENCY=aed
STRIPE_WEBHOOK_SECRET=whsec_...

# Optional: Stripe Tax
ENABLE_STRIPE_TAX=false

# Optional: Analytics
NEXT_PUBLIC_UMAMI_WEBSITE_ID=your-umami-id

# Optional: Newsletter
NEXT_PUBLIC_NEWSLETTER_ENDPOINT=https://your-newsletter-service.com/subscribe

# Optional: Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Locale
NEXT_PUBLIC_LANGUAGE=en-US
